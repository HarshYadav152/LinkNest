# ==============================================
# LinkNest Backend Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control!

# Database Configuration
# Get this from MongoDB Atlas or use local MongoDB
MONGO_URL=mongodb://localhost:27017/linknest

# JWT Secret Key
# Generate a secure random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_PASSWORD=your_super_secure_jwt_secret_key_minimum_32_characters

# Application Settings
NODE_ENV=development
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Service (for future email verification feature)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Optional: Email Templates
EMAIL_FROM_NAME=LinkNest Team
EMAIL_FROM_ADDRESS=noreply@linknest.com
